<%- include ('./include/head') %>
<%- include ('./include/nav') %> 

<div class="row mt-5">
<p id="session" hidden><%= session.email %></p>
    <div class="col-md-6 m-auto">
        <div class="card card-body">
           <h1 class="text-center mb-3"><i class="fas fa-edit"></i></i>File Report</h1>
           <%- include ('./partials/messages') %>
           <%- include ('./include/notification')%>
           <form action="/report" method="post">
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input 
                    type="text" 
                    name="subject" 
                    id="subject" 
                    class="form-control" 
                    placeholder="Enter subject"
                    value="<%= typeof userName != 'undefined' ? userName : '' %>"
                    >
                </div>
                <div class="form-group">
                    <label for="text">Complaint</label>
                    <textarea class="form-control" name="text" id="text" cols="10" rows="5" placeholder="Please explain the issue..."></textarea>
                </div>
                <br>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
         <br>
        </div>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/socketEvents.js"></script>