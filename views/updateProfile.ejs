<%- include ('./include/head') %>
<%- include ('./include/nav') %>

<% if (session.suspended == 1) { %>
  <br><br><h1 class="mb-3">Update Profile</h1><br><br>
  <%- include ('./partials/messages') %>
  <p>Following a report, your account has been suspended and is currently under review, please be patient while we evaluate all the facts.</p><br><br>
<% } %>

<% if (session.suspended != 1) { %>
  <div class="row mt-5">
  <p id="session" hidden><%= session.email %></p>
      <div class="col-md-6 m-auto">
          <div class="card card-body">
             <h1 class="text-center mb-3"><i class="fas fa-edit"></i></i>Update Profile</h1>
             <%- include ('./partials/messages') %>
             <%- include ('./include/notification')%>
             <form action="/updateProfile" method="post">
                  <div class="form-group">
                      <label for="userName">Username</label>
                      <input 
                      type="name" 
                      name="userName" 
                      id="userName" 
                      class="form-control" 
                      placeholder="Enter Username"
                      value="<%= typeof userName != 'undefined' ? userName : '' %>"
                      >
                  </div>
                  <div class="form-group">
                      <label for="firstName">First Name</label>
                      <input 
                      type="name" 
                      name="firstName" 
                      id="firstName" 
                      class="form-control" 
                      placeholder="Enter First Name"
                      value="<%= typeof firstName != 'undefined' ? firstName : '' %>"
                      >
                  </div>
                  <div class="form-group">
                      <label for="lastName">Last Name</label>
                      <input 
                      type="name" 
                      name="lastName" 
                      id="lastName" 
                      class="form-control" 
                      placeholder="Enter Last Name"
                      value="<%= typeof lastName != 'undefined' ? lastName : '' %>"
                      >
                  </div>
                  <div class="form-group">
                      <label for="email">Email</label>
                      <input type="email"
                      id="email"
                      name="email"
                      class="form-control"
                      placeholder="Enter Email"
                      value="<%= typeof email != 'undefined' ? email : '' %>"
                      >
                  </div>
                  <div class="form-group">
                    <label for="location">Location</label>
                    <input type="text"
                    id="location"
                    name="location"
                    class="form-control"
                    placeholder="Enter Street & City"
                    value="<%= typeof location != 'undefined' ? location : '' %>"
                    >
                </div>
                  <div class="form-group">
                    <label for="gender">Gender</label>
                    <select class="form-control" name="gender" id="gender">
                        <option value="Unchanged">Unchanged</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
                  <div class="form-group">
                    <label for="sexOr">Sexual Orientation</label>
                    <select class="form-control" name="sexOr" id="sexOr">
                        <option value="Unchanged">Unchanged</option>
                        <option value="Bi">Bisexual</option>
                        <option value="Hetro">Hetrosexual</option>
                        <option value="Homo">Homosexual</option>
                    </select>
                </div>
                <div class="form-group">
                  <label for=dateOfBirth">Date of birth</label>
                  <input
                    type="date"
                    class="form-control"
                    name="dateOfBirth"
                    id="dateOfBirth"
                  >
                </div>
                  <p>Interests (Please select 4): </p>
                  <div class="form-check-inline">
                    <label class="form-check-label ">
                      <input type="radio" class="form-check-input" name="Interests0" value="#Traveling">#Traveling 
                    </label>&nbsp;&nbsp;<br>
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="Interests0" value="#Exercise">#Exercise 
                    </label>&nbsp;&nbsp;
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="Interests0" value="#Dancing">#Dancing 
                    </label>&nbsp;&nbsp;<br>
                  </div>
                  <div class="form-check-inline">
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="Interests1" value="#Cooking">#Cooking
                    </label>&nbsp;&nbsp;<br>
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="Interests1" value="#Outdoors">#Outdoors
                    </label>&nbsp;&nbsp;
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="Interests1" value="#Politics">#Politics
                    </label>&nbsp;&nbsp;
                  </div>
                  <div class="form-check-inline">
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="Interests2" value="#Pets">#Pets
                    </label>&nbsp;&nbsp;<br>
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="Interests2" value="#Photography">#Photography
                    </label>&nbsp;&nbsp;
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="Interests2" value="#Sports">#Sports
                    </label>&nbsp;&nbsp;
                  </div>
                  <div class="form-check-inline">
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="Interests3" value="#Art">#Art
                    </label>&nbsp;&nbsp;<br>
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="Interests3" value="#Learning">#Learning
                    </label>&nbsp;&nbsp;
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="Interests3" value="#Music">#Music
                    </label>
                  </div><br><br>
                  <div class="form-group">
                      <label for="password">New Password</label>
                      <input type="password"
                      id="password"
                      name="password"
                      class="form-control"
                      placeholder="Enter New Password"
                      value="<%= typeof password != 'undefined' ? password : '' %>"
                      >
                  </div>
                  <div class="form-group">
                      <label for="password2">Confirm Password</label>
                      <input type="password"`
                      id="password2"
                      name="password2"
                      class="form-control"
                      placeholder="Confirm Password"
                      value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                      >
                  </div>
                  <div class="form-group">
                      <label for="bio">Bio</label>
                      <textarea class="form-control" name="bio" id="bio" cols="10" rows="5" placeholder="Tell us about yourself..."></textarea>
                  </div>
                  <br>
                  <button type="submit" class="btn btn-primary btn-block">Update</button>
              </form>
           <br>
          </div>
      </div>
  </div>
<% } %>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/socketEvents.js"></script>